		<profile>
			<id>wangrb</id>
			<properties>
				<db.url>127.0.0.1\:3306</db.url>
				<db.user>root</db.user>
				<db.pw>Ast4HS</db.pw>
				<db.name>vlpr</db.name>
				<log4j.rootLogger>info,myconsole</log4j.rootLogger>
